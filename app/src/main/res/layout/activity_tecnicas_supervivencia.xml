<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8E6C9"
    tools:context=".Tecnicas_supervivencia">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashScreenActivity">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="277dp"
            app:srcCompat="@drawable/pexels_marta_wave_5875883" />

        <TextView
            android:id="@+id/menuguía"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="#C1FFFFFF"
            android:backgroundTint="#3E3C3C"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Técnicas de Supervivencia"
            android:textAlignment="center"
            android:textSize="22sp"
            tools:ignore="MissingConstraints" />

        <ScrollView
            android:layout_width="318dp"
            android:layout_height="444dp"
            android:layout_below="@+id/imageView9"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="51dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="308dp"
                    android:layout_height="160dp"
                    app:srcCompat="@drawable/pexels_min_an_771308" />

                <TextView
                    android:id="@+id/refugio"
                    android:layout_width="329dp"
                    android:layout_height="match_parent"
                    android:background="#8F000000"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Cómo hacer un refugio"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/fuego"
                    android:layout_width="329dp"
                    android:layout_height="match_parent"
                    android:background="#8F000000"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Hacer fuego"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/agua"
                    android:layout_width="329dp"
                    android:layout_height="match_parent"
                    android:background="#8F000000"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Obtener agua potable"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/señales"
                    android:layout_width="329dp"
                    android:layout_height="match_parent"
                    android:background="#8F000000"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Señales de rescate"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/frio"
                    android:layout_width="329dp"
                    android:layout_height="match_parent"
                    android:background="#8F000000"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Protegerse del frío"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/calor"
                    android:layout_width="329dp"
                    android:layout_height="match_parent"
                    android:background="#8F000000"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Protegerse del calor"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>