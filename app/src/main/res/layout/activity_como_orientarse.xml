<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8E6C9"
    tools:context=".ComoOrientarse">

    <TextView
        android:id="@+id/comoorientarse"
        android:layout_width="417dp"
        android:layout_height="48dp"
        android:alpha="0.6"
        android:background="#000000"
        android:fontFamily="@font/roboto_bold"
        android:text="Como Orientarse"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="43dp"
        android:layout_height="41dp"
        android:onClick="volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:srcCompat="@drawable/abc_vector_test" />

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="409dp"
        android:layout_height="625dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comoorientarse"
        app:layout_constraintVertical_bias="0.145">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/espacio3"
                android:layout_width="360dp"
                android:layout_height="37dp"
                android:background="#004CAF50"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="invisible" />


            <ImageView
                android:id="@+id/sol"
                android:layout_width="219dp"
                android:layout_height="144dp"
                android:layout_marginBottom="4dp"
                android:onClick="orientarsesol"
                android:src="@drawable/sol" />

            <TextView
                android:id="@+id/textosol"
                android:layout_width="217dp"
                android:layout_height="37dp"
                android:background="#8F000000"
                android:fontFamily="@font/roboto_bold"
                android:onClick="orientarsesol"
                android:shadowColor="#FFFFFF"
                android:text="Sol"
                android:textAlignment="center"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/espacio1"
                android:layout_width="207dp"
                android:layout_height="37dp"
                android:background="#004CAF50"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="invisible" />


            <ImageView
                android:id="@+id/luna"
                android:layout_width="217dp"
                android:layout_height="170dp"
                android:onClick="orientarseluna"
                android:src="@drawable/luna"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textoluna"
                android:layout_width="217dp"
                android:layout_height="37dp"
                android:background="#8F000000"
                android:fontFamily="@font/roboto_bold"
                android:onClick="orientarseluna"
                android:text="Luna"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/espacio2"
                android:layout_width="207dp"
                android:layout_height="37dp"
                android:background="#00000000"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="invisible" />

            <ImageView
                android:id="@+id/estrellas"
                android:layout_width="217dp"
                android:layout_height="131dp"
                android:onClick="orientarseestrellas"
                android:src="@drawable/estre"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textoestrellas"
                android:layout_width="217dp"
                android:layout_height="37dp"
                android:background="#8F000000"
                android:fontFamily="@font/roboto_bold"
                android:onClick="orientarseestrellas"
                android:text="Estrellas"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/espa"
                android:layout_width="207dp"
                android:layout_height="37dp"
                android:background="#00000000"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="invisible" />


            <ImageView
                android:id="@+id/roc"
                android:layout_width="219dp"
                android:layout_height="144dp"
                android:layout_marginBottom="4dp"
                android:onClick="orientarsesignos"
                android:src="@drawable/roca" />

            <TextView
                android:id="@+id/textosigno"
                android:layout_width="217dp"
                android:layout_height="37dp"
                android:background="#8F000000"
                android:fontFamily="@font/roboto_bold"
                android:onClick="orientarsesignos"
                android:shadowColor="#FFFFFF"
                android:text="Signos Naturales"
                android:textAlignment="center"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/espac"
                android:layout_width="207dp"
                android:layout_height="37dp"
                android:background="#00000000"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="invisible" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>